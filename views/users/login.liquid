{% layout 'layout.liquid' %}
{% block content %}

<div class="container-md">
    <form action="/users/login" method="POST">
        <fieldset>
            <legend>Welcome To FAST LIFE, please log in here</legend>
            <label class="form-label">Username:</label>
            <input 
                type="text" 
                name="username" 
                class="form-control"
            >
            <label class="form-label">Password:</label>
            <input 
                type="password" 
                name="password" 
                class="form-control"
            >
        </fieldset>
        <input 
            type="submit"
            value="Log In" 
            class="btn btn-success"
        >
    </form>
    <img src="/images/watermelon-gd6017626f_1920.jpg" class="img-fluid" alt="">
</div>

{% endblock %}